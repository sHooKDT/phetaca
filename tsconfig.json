{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES6"],
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
