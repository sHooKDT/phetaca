    {
      "name": "@phetaca/core",
      "path": "dist/*.js",
      "limit": "2KB",
      "ignore": ["react", "ky"]
    }
  ],
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.0",
    "@size-limit/preset-small-lib": "^4.3.1",
